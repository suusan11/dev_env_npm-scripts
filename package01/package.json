{
  "name": "npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean/css": "rimraf dist/css && mkdir -p dist/css",
    "clean/js": "rimraf dist/js && mkdir -p dist/js",
    "clean/images": "rimraf dist/images && mkdir -p dist/images",
    "html/compile": "ejs-cli -b src/ejs/ \"/**/*.ejs\" -o dist/",
    "html": "npm-run-all html/*",
    "css/sass": "sass src/scss/style.scss dist/css/style.min.css --style compressed --no-source-map",
    "css/postcss": "postcss dist/css/style.min.css -o dist/css/style.min.css",
    "css": "npm run clean/css && npm-run-all -s css/*",
    "js/rollup": "rollup src/js/script.js -c=rollup.config.js",
    "js/uglifyjs": "uglifyjs dist/js/script.js -o dist/js/script.min.js",
    "js": "npm run clean/js && npm-run-all -s js/*",
    "images/imagemin": "node imagemin.js",
    "images": "npm run clean/images && npm-run-all -s images/*",
    "watch/server": "browser-sync start --server dist -f 'dist, **/*.html'",
    "watch/html": "watch 'npm run html' ./src/ejs",
    "watch/css": "watch 'npm run css' ./src/scss",
    "watch/js": "watch 'npm run js' ./src/js",
    "watch/images": "onchange 'src/images' -e '**/*.DS_Store' -- npm run images",
    "watch": "npm-run-all -p watch/*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "autoprefixer": "^10.2.6",
    "browser-sync": "^2.26.14",
    "cssnano": "^5.0.6",
    "ejs-cli": "^2.2.1",
    "imagemin": "^8.0.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^6.0.1",
    "imagemin-svgo": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.3.4",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass": "^1.35.0",
    "uglify-js": "^3.13.9",
    "watch": "^1.0.2"
  },
  "browserslist": [
    "last 2 version",
    "ie >= 11",
    "Android >= 4"
  ]
}
