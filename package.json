{
  "name": "npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile:ejs": "ejs-cli -b src/ejs/ \"/**/*.ejs\" -o dist/",
    "watch:ejs": "chokidar \"src/ejs/\" -c \"npm run compile:ejs\" --initial",
    "watch:sass": "sass src/scss/style.scss dist/css/style.min.css --style compressed --no-source-map --watch | postcss --use autoprefixer -b 'last 10 versions' dist/css/style.min.css -o dist/css/style.min.css",
    "watch:js": "cpx \"src/js/*.js\" dist/js/ -w | uglifyjs dist/js/index.js -o dist/js/index.min.js | ./node_modules/.bin/babel ./src/js --out-dir ./dist/js",
    "watch:img": "chokidar \"src/images/**/*\" --command \"node imagemin.js\" --initial",
    "start:server": "browser-sync start -s dist -w dist/*.html dist/css/*.css dist/js/*.js",
    "watch": "npm-run-all -p watch/* start:server",
    "delete:dist": "rimraf dist",
    "copy:faviconico": "cpx \"src/favicon.ico\" dist/",
    "copy:apple-touch-iconpng": "cpx \"src/apple-touch-icon.png\" dist/",
    "prewatch:all": "run-s delete:dist copy:faviconico copy:apple-touch-iconpng"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.6",
    "browser-sync": "^2.26.14",
    "chokidar-cli": "^2.1.0",
    "cpx": "^1.5.0",
    "ejs-cli": "^2.2.1",
    "imagemin-cli": "^6.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0",
    "postcss": "^8.3.4",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "sass": "^1.35.0",
    "uglify-js": "^3.13.9"
  },
  "browserslist": [
    "last 2 version",
    "ie >= 11",
    "Android >= 4"
  ]
}
